{% extends 'dashboard_layout.html.twig' %}

{% block title %}Update your profile{% endblock %}

{% block body %}
    <h1 class="mt-4">Dashboard</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">My Profile</li>
    </ol>

    <div class="row mb-4">
        <div class="col-sm-12 col-md-4">
            <div class="card">
                <h5 class="card-header">Change Profile Picture</h5>
                <div class="card-body">
                    {# For social login, we will get profile picture URL not our local path #}
                    {% if "http" in app.user.getProfilePicture|slice(0,4) %}
                        <img src="{{ app.user.getProfilePicture }}" class="card-img-top mb-3">
                    {% else %}
                        <img src="{{ asset("app_uploads/users/profile/" ~ app.user.getProfilePicture) }}" class="card-img-top mb-3">
                    {% endif %}

                    {{ form(profilePictureForm) }}
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-8">
            <div class="card">
                <h5 class="card-header">Update your profile</h5>
                <div class="card-body">
                    {{ form(profileGenralForm) }}
                </div>
                <div class="card-footer">
                    Last updated at {{ app.user.getUpdatedAt|ago }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}